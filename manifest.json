{
  "name": "WRC Without Spoilers",
  "description": "Hide spoilers on the WRC platform.",
  "version": "0.1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://*.stackoverflow.com/*"],
      "css": ["contentScript/styles.css"],
      "js": [
        "contentScript/constants.js",
        "contentScript/spoilerHiding.js",
        "contentScript/updateState.js",
        "contentScript/main.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  }
}
